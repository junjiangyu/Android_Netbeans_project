<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Calorie Tracker screen"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAlignment="center"

        />


    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#59453D"
        >

        <TableRow>
            <TextView android:text="Calorie Goal:"

                android:textSize="20dp"/>

            <TextView
                android:id="@+id/Goal"
                android:layout_width="120dp"
                android:gravity="right"
                android:textSize="20dp"
                />
        </TableRow>

        <TableRow>
        <TextView android:text="Total Steps Taken:"
            android:textSize="20dp"/>
            <TextView
                android:id="@+id/totalSteps"
                android:layout_width="120dp"
                android:gravity="right"
                android:textSize="20dp"
                />

    </TableRow>

        <TableRow>
            <TextView android:text="Total Calorie Consumend:"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/totalconsumed"
                android:layout_width="120dp"
                android:gravity="right"
                android:textSize="20dp"
                />


        </TableRow>

        <TableRow>
            <TextView android:text="Total Calorie burned:"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/totalburned"
                android:gravity="right"
                android:textSize="20dp"
                />
        </TableRow>

    </TableLayout>

    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/btn_report"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="SUBMIT TO REPORT"/>

</LinearLayout>